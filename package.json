{
  "name": "pic-style",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "clean": "if exist dist rd /s /q dist",
  "build": "npm run clean && electron-builder",
  "pack": "electron-builder",
  "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.picstyle.app",
    "productName": "Pic Style",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js"
    ],
    "icon": "pic-style.png",
    "extraResources": [
      {
        "from": "./cubes",
        "to": "cubes",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./shaders",
        "to": "shaders",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./pic-styles.json",
        "to": "pic-styles.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },

  "keywords": [],
  "author": "",
  "description": "A small film simulation / LUT previewer and batch processor.",
  "license": "ISC",
  "type": "commonjs",
  
  "dependencies": {
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  }
}
